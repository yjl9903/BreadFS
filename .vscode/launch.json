  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test File",
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "--test-timeout=-1",
        "${relativeFile}"
      ],
      "windows": {
        "runtimeExecutable": "fnm",
        "runtimeArgs": [
          "exec",
          "--",
          "node"
        ],
      },
      "smartStep": true,
      "console": "integratedTerminal"
    }
  ]
}